<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="5dip"
                  android:orientation="horizontal">
        <com.android.volley.toolbox.NetworkImageView android:layout_width="60dip"
                                                android:layout_height="60dip"
                                                android:id="@+id/profile_pic"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:paddingLeft="10dip"
                  android:gravity="center_vertical"
                  android:textSize="24dip"
                  android:layout_weight="1"
                  android:id="@+id/profile_name"
                  android:text="Welcome stranger"/>
        <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:id="@+id/progress"
                android:layout_gravity="center"
                />
    </LinearLayout>
    <FrameLayout android:id="@+id/fragment_container" android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_weight="1">

    </FrameLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center"
                  android:padding="5dip"
            >
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/prev"
                android:layout_marginRight="20dip"

                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/questionNumber"
                  android:text="0"
                  android:layout_gravity="center"
                  android:textSize="20sp"
                />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Skip"
                android:id="@+id/next"
                android:layout_marginLeft="20dip"
                />

    </LinearLayout>

</LinearLayout>